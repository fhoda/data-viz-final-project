{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "width": 800,
  "height": 300,
  "padding": 20,

  "data": [
    {
      "name": "table",
      "format":{
        "type": "csv"
      },
      "url": "./avg_rank.csv"
    }
  ],

  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {"events": "rect:mouseover", "update": "datum"},
        {"events": "rect:mouseout",  "update": "{}"}
      ]
    }
  ],

  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {"data": "table", "field": "Month"},
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {"data": "table", "field": "Avg_Rank"},
      "nice": true,
      "range": "height"
    }
  ],

  "axes": [
    { "orient": "bottom",
      "type": "x",
      "scale": "xscale",
      "title": "Month",
      "properties":{
        "title": {
         "fontSize": {"value": 30}
       }
     },
      "encode":{
        "labels":{
          "update": {
            "fontSize": {"value": 16},
            "fill": {"value": "#f2f2f2"}
          }
        }
      }
    },
    { "orient": "left",
      "scale": "yscale",
      "title": "Avg Rank (2012-2016)",
      "properties":{
        "title": {
         "fontSize": {"value": 30}
       }
     },
      "encode":{
        "labels":{
          "update": {
            "fontSize": {"value": 16},
            "fill": {"value": "#f2f2f2"}
          }
        }
      }
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": {"data":"table"},
      "encode": {
        "enter": {
          "x": {"scale": "xscale", "field": "Month"},
          "width": {"scale": "xscale", "band": 1},
          "y": {"scale": "yscale", "field": "Avg_Rank"},
          "y2": {"scale": "yscale", "value": 0}
        },
        "update": {
          "fill": {"value": "#CFE1EC"}
        },
        "hover": {
          "fill": {"value": "orangered"}
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {"value": "center"},
          "baseline": {"value": "bottom"},
          "fill": {"value": "#CFE1EC"}
        },
        "update": {
          "x": {"scale": "xscale", "signal": "tooltip.Month", "band": 0.5},
          "y": {"scale": "yscale", "signal": "tooltip.Avg_Rank", "offset": -2},
          "text": {"signal": "tooltip.Avg_Rank"},
          "fillOpacity": [
            {"test": "datum === tooltip", "value": 0},
            {"value": 1}
          ]
        }
      }
    }
  ]
}
